<resources>

    <style name="ApplicationTheme" parent="ApplicationTheme.Base">


    </style>

    <style name="ApplicationTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/blank</item>
    </style>
    <style name="BlankTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/blank</item>
    </style>
    <style name="AppTheme.Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
